{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"]
    },
    "lint": {
      "cache": true,
      "outputs": [],
      "dependsOn": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "cache": true,
      "outputs": ["dist/.tsbuildinfo", ".tsbuildinfo"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "index.ts", "**/*.ts", "**/*.tsx", "tsconfig.json", "package.json"],
      "dependsOn": []
    },
    "db:generate": {
      "cache": true,
      "outputs": ["node_modules/.prisma/**"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}