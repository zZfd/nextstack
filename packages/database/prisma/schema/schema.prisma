/// V4.3 - Final Schema
/// Integrates a centralized File model for robust media management.
/// All models and comments are in English.
/// Last Updated: 2025-09-14

// ----------------------------------------
// Datasource & Generator
// ----------------------------------------

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider               = "zod-prisma-types"
  output                 = "../../../validators/src/generated"
  createInputTypes       = true
  addInputTypeValidation = true
  addIncludeType         = true
  addSelectType          = true
}
