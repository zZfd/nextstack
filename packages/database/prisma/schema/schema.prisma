// ----------------------------------------
// Datasource & Generator
// ----------------------------------------

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider   = "prisma-zod-generator"
  output     = "../../../validators/src/generated"
  configPath = "../../../validators/zod-config.json"
}
