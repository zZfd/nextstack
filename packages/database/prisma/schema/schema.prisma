generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider               = "zod-prisma-types"
  output                 = "../../../validators/src/generated"
  createInputTypes       = true
  addInputTypeValidation = true
  addIncludeType         = true
  addSelectType          = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
