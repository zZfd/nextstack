{
  "name": "nexstack-api",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc --build",
    "start": "node dist/index.js",
    "lint": "eslint . --ext ts --max-warnings 0",
    "lint:fix": "eslint . --ext ts --max-warnings 0 --fix",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t nexstack-api .",
    "docker:run": "docker run -d -p 3001:3001 --name nexstack-api-container nexstack-api",
    "docker:stop": "docker stop nexstack-api-container",
    "docker:remove": "docker rm nexstack-api-container",
    "docker:logs": "docker logs -f nexstack-api-container",
    "docker:deploy": "pnpm docker:build && pnpm docker:run"
  },
  "dependencies": {
    "@trpc/server": "^11.5.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "@nexstack/api": "workspace:*",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.13",
    "@types/compression": "^1.7.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "@nexstack/tsconfig": "workspace:*",
    "@nexstack/eslint-config": "workspace:*"
  }
}