{
  "name": "nextstack-api",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --build",
    "start": "node dist/index.js",
    "lint": "eslint . --ext ts --max-warnings 0",
    "lint:fix": "eslint . --ext ts --max-warnings 0 --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run tests/integration",
    "docker:build": "docker build -t nextstack-api .",
    "docker:run": "docker run -d -p 3001:3001 --name nextstack-api-container nextstack-api",
    "docker:stop": "docker stop nextstack-api-container",
    "docker:remove": "docker rm nextstack-api-container",
    "docker:logs": "docker logs -f nextstack-api-container",
    "docker:deploy": "pnpm docker:build && pnpm docker:run"
  },
  "dependencies": {
    "@nextstack/api": "workspace:*",
    "@trpc/server": "^11.5.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@nextstack/eslint-config": "workspace:*",
    "@nextstack/tsconfig": "workspace:*",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.13",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^17.2.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}