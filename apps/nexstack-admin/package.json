{
  "name": "nexstack-admin",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t nexstack-admin .",
    "docker:run": "docker run -d -p 8080:80 --name nexstack-admin-container nexstack-admin",
    "docker:stop": "docker stop nexstack-admin-container",
    "docker:remove": "docker rm nexstack-admin-container",
    "docker:logs": "docker logs -f nexstack-admin-container",
    "docker:deploy": "pnpm docker:build && pnpm docker:run"
  },
  "dependencies": {
    "@nexstack/trpc": "workspace:*",
    "@nexstack/ui": "workspace:*",
    "@tanstack/react-query": "^5.80.3",
    "@trpc/client": "^11.5.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@nexstack/eslint-config": "workspace:*",
    "@nexstack/tsconfig": "workspace:*",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.19"
  }
}