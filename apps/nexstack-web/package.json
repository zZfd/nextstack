{
  "name": "nexstack-web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext js,jsx,ts,tsx --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --max-warnings 0 --fix",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t nexstack-web .",
    "docker:run": "docker run -d -p 3000:3000 --name nexstack-web-container nexstack-web",
    "docker:stop": "docker stop nexstack-web-container",
    "docker:remove": "docker rm nexstack-web-container",
    "docker:logs": "docker logs -f nexstack-web-container",
    "docker:deploy": "pnpm docker:build && pnpm docker:run"
  },
  "dependencies": {
    "@nexstack/api": "workspace:*",
    "@nexstack/trpc": "workspace:*",
    "@nexstack/ui": "workspace:*",
    "@tanstack/react-query": "^5.80.3",
    "@trpc/client": "^11.5.1",
    "@trpc/next": "^11.5.1",
    "@trpc/react-query": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "next": "^15.1.8",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@nexstack/eslint-config": "workspace:*",
    "@nexstack/tsconfig": "workspace:*",
    "@types/node": "^20.19.13",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript": "^5.9.2"
  }
}